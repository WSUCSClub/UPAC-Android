<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Content Description here" />

        <Button
            android:id="@+id/raffle_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter Raffle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Title here"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/near"
            android:drawableStart="@drawable/near"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Location here"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/recents"
            android:drawableStart="@drawable/recents"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Time here"
            android:textColor="#808080"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Description here"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>